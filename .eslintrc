{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "prettier",
    "prettier/standard",
    "plugin:vue/recommended"
  ],
  "plugins": [
    "vue",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "indent": [
      2,
      2
    ],
    "semi": 2,
    "quotes": [
      "error",
      "single",
      "avoid-escape"
    ],
    "no-else-return": 1,
    "no-unreachable": 1,
    "no-empty": 1,
    "no-duplicate-case": 1,
    "block-scoped-var": 2,
    "vue/max-attributes-per-line": 0
  }
}